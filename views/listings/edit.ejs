<% layout("/layouts/boilerplate") -%>
<body>
    
    <div class="row form-edit">
        <div class="col-md-8 offset-2">
    <h1>Edit Form:</h1>

    <form  method="post"  action="/listings/<%= data._id%>?_method=put" novalidate class="needs-validation" enctype="multipart/form-data" >
        <div class="mb-3">
            <label class="form-label" for="title">Title:</label>
            <input class="form-control" type="text" id="title" name="listing[title]" value="<%= data.title %>" required>
        </div>
        
        <div>
            <label class="form-label" for="description">Description:</label>
            <textarea class="form-control" id="description" name="listing[description]" rows="3" required ><%= data.description %></textarea>
            <div class="invalid-feedback">
                Please write a short description.
              </div>
        </div>
        
        <!-- <div>
            <label class="form-label" for="image">Image URL:</label>
            <input class="form-control" type="url" id="image" name="listing[image]" value="<%= data.image %>">
            <div class="invalid-feedback">
                Please provide a valid url.
              </div>
        </div> -->

        <div class="mb-3">
            orignalImage <br>
           <img src= "<%= originalImage %>" alt=""> 
        </div>
        <div>
            <label class="form-label" for="image">Image URL:</label>
            <input class="form-control" type="file" id="image" name="listing[image]" value="<%= data.image.url %>">
            <div class="invalid-feedback">
                Please provide a valid url.
              </div>
        </div>
        <br><br>
        <div>
            <label class="form-label" for="price">Price:</label>
            <input class="form-control" type="number" id="price" name="listing[price]" step="50" min="0" value="<%= data.price %>" required>
            <div class="invalid-feedback">
                Please give a valid Price.
              </div>
        </div>
        <br><br>
        <div class="row">
            <div class= "mb-3 col-md-4">
       
            <label class="form-label" for="location">Location:</label>
            <input class="form-control" type="text" id="location" name="listing[location]" value="<%= data.location %>" required>
            <div class="invalid-feedback">
                Please provide a valid location.
              </div>
        </div>
        
        <div class= "mb-3 col-md-4 ">
            <label class="form-label" for="country">Country:</label>
            <input class="form-control" type="text" id="country" name="listing[country]" value="<%= data.country %>" required>
            <div class="invalid-feedback">
                Please provide a valid country.
              </div>
        </div>
    </div>
      
        <br><br>
        <button class="btn-dark" type="submit">Submit</button><br><br>
    </form>
    </div>
    </div>

</body>
</html>