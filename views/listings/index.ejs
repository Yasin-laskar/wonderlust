<% layout("/layouts/boilerplate") -%>


<style>
  #icon{
    display: flex;
    flex-wrap:nowrap;
    text-align: center;
    overflow-x: auto; 
    align-items: center;
    box-sizing: border-box;
    
    
  }
  .icon{
    margin-right: 2rem;
    margin-top: 1rem;
    opacity: 0.7;
  }
  .icon:hover{
    opacity: 1;
  }
  .toggle-btn{
    margin-left: 12rem;
    
    border:1px solid black;
    border-radius: 1rem;
    height: 3rem;
   padding: 1rem;
   width: 14rem;
  }
  .tax-info{
    display: none;
  }

  
 
</style>
<body>
 
   <div id="icon" >
    <div class="icon" >
      <i class="fa-solid fa-umbrella-beach"></i>
      <p>beach</p>
    </div>
    <div class="icon" >
      <i class="fa-solid fa-hotel"></i>
      <p>Hotel</p>
    </div>
 
    <div class="icon" >
      <i class="fa-solid fa-person-swimming"></i>
      <p>Great Pool</p>
    </div>
    <div class="icon" >
      <i class="fa-solid fa-building"></i>
      <p>iconic cities</p>
    </div>
   
    <div class="icon" >
      <i class="fa-solid fa-tractor"></i>
      <p>off roading</p>
    </div>
    <div class="icon" >
      <i class="fa-solid fa-mountain-sun"></i>
      <p>moutain</p>
    </div>
    <div class="icon" >
      <i class="fa-solid fa-campground"></i>
      <p>campground</p>
    </div>
    <div class="icon" >
      <i class="fa-solid fa-landmark"></i>
      <p>iconic</p>
    </div>
    
    <div class="toggle-btn">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">total after the tax</label>
      </div>
      
    </div>

  </div>
    

<!-- styling the filter ends here -->
   
    <div class="row row-cols-lg-3 row-cols-md-2  row-cols-sm-1 row-cols-xs-1" >
        <% for (let list of allListing) { %>
          <a href="/listings/<%= list._id %>" class="listing-link">   
            <div class="card col" >
                <img src="<%= list.image.url %>" class="card-img-top" alt="resort">
                <div class="card-img-overlay">book now</div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= list.title %></b>
                    <br>
                    â‚¹<%= list.price ? list.price.toLocaleString("en-IN") : "Price not available" %> /night %>
                    <i class="tax-info"> &nbsp;  +18% GST</i>


                  </p>
                </div>
              </div>
            </a>
              <% } %>
       
    </div>
  
    
</body>

 <script>
   let taxBtn=document.getElementById("flexSwitchCheckDefault");

   taxBtn.addEventListener("click",()=>{

   let taxInfo=document.getElementsByClassName("tax-info");
  
   for(tax of taxInfo){
    if(tax.style.display !="inline" ){
    tax.style.display="inline";
   }else{
    tax.style.display="none";
   }
  } })
</script>
